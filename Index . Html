    <script>
        function moveNo() {
            // Screen ke borders ke hisaab se button bhagega
            let x = Math.random() * (window.innerWidth - 150);
            let y = Math.random() * (window.innerHeight - 100);
            let btn = document.getElementById('noBtn');
            btn.style.left = x + 'px';
            btn.style.top = y + 'px';
        }

        function success() {
            alert("Yayyy! Thank you for forgiving me! ‚ù§Ô∏è I love you!");
